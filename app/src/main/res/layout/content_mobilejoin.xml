<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.parmissmarthome.parmis_smart_home.mobilejoin"
    tools:showIn="@layout/activity_mobilejoin">

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اضافه کردن محصول"
        android:hint="کاربر می تواند در گوشی خود محصولات را اضافه کند"
        android:id="@+id/ifaddkeyuser"
        android:checked="false"
        android:showText="false"
        android:singleLine="false"
        android:splitTrack="false"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اضافه کردن سناریو"
        android:hint="کاربر می تواند سناریوی دلخواه خود را تعریف نماید"
        android:id="@+id/ifaddscriptuser"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کنترل توسط پیامک"
        android:hint="کاربر می تواند سناریوی دلخواه خود را تعریف نماید"
        android:id="@+id/ifsendsms"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:checked="false" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کنترل توسط اینترنت"
        android:hint="کاربر می تواند سناریوی دلخواه خود را تعریف نماید"
        android:id="@+id/ifweb"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:checked="false" />

</LinearLayout>
