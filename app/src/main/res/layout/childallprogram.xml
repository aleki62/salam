<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
 <!--android:background="@drawable/backitemallprogram"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/txtchildall"
        android:layout_row="0"
        android:gravity="center|center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgchildall" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgchildall"
        android:src="@drawable/shape_main_item"
        android:layout_row="0"
        android:layout_column="0"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlampOnall"
        android:src="@mipmap/lighton"
        android:layout_row="0"
        android:layout_column="4"
        android:background="@drawable/whit_button"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnlampOffall"
        android:layout_toStartOf="@+id/btnlampOffall" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlampOffall"
        android:src="@mipmap/lightoff"
        android:background="@drawable/whit_button"
        android:layout_row="0"
        android:layout_column="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--android:textColor="@color/abc_primary_text_material_dark" -->

</RelativeLayout>